<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:textSize="30dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="4">

        <Button
            android:id="@+id/dialogActiveFilter_dollar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/dialogActiveFilter_dollar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$$"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/dialogActiveFilter_dollar3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$$$"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/dialogActiveFilter_dollar4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$$$$"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/dialogActiveFilter_openNowButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OPEN NOW"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/button_selected"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogActiveFilter_backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="BACK"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>

</LinearLayout>