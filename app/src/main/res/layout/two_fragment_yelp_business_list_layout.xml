<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:visibility="visible"
        android:id="@+id/yelpBusinessListLayoutFragment_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yelpBusinessListLayoutFragment_vendorLL"
            android:orientation="vertical"
            android:paddingTop="3dp">

            <!-- this is where vendor fragments are placed -->

        </LinearLayout>

    </ScrollView>

    <TextView
        android:visibility="gone"
        android:id="@+id/yelpBusinessListLayoutFragment_emptyTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Businesses To Be Displayed"
        android:textSize="20sp"
        android:gravity="center"/>

</FrameLayout>
